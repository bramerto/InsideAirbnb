@model IEnumerable<InsideAirbnbApp.ViewModels.NeighbourhoodsViewModel>
@{
    ViewData["Title"] = "Admin panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="chart-container">
    <div class="row col-md-12">
        <div class="col-md-6">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Soorten eigendommen</h4>
                    </div>
                    <div class="card-body">
                        <canvas id="propertyTypeChart"></canvas>
                    </div>
                </div>
            </div>
            <hr />
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Beschikbaarheid</h4>
                    </div>
                    <div class="card-body">
                        <canvas id="availabilityChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Gemiddelde kosten</h4>
                    </div>
                    <div class="card-body">
                        <canvas id="pricesChart"></canvas>
                    </div>
                    <div class="card-footer">
                        <p>De buitenste cirkel geeft gemiddelde kosten per dag aan.</p>
                        <p>De tweede cirkel geeft gemiddelde kosten per week aan.</p>
                        <p>De binnenste cirkel geeft gemiddelde kosten per maand aan.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <h4>Filter per buurt</h4>
                <select class="form-control" id="neighbourhoodFilterGraph">
                    <distributed-cache name="NeighbourhoodList" expires-after="@TimeSpan.FromMinutes(5)" expires-sliding="TimeSpan.FromMinutes(1)">
                        <option value="0">Selecteer...</option>
                        @foreach (var item in Model)
                        {
                            <option value="@item.Id">@item.Neighbourhood</option>
                        }
                    </distributed-cache>
                </select>
            </div>
        </div>
    </div>
</div>
